section.partners-content
  background-image linear-gradient(#fff, #ddd 750px)
  .pre-textual
    text-align center
    max-width 1000px
    width 80%    
    font-size 26px
    line-height 1.2
    padding 30px 0 30px
    margin 0 auto
    color #5d5d5d
    p
      margin 30px 0

  .partners-list
    padding 50px 0
    overflow hidden
    .partners-list-item
      display flex
      color #252525
      // background-color white
      width 90%
      max-width 1000px
      margin 150px auto

      &:first-child
        margin-top 0
      &:first-child
        margin-bottom 0
      
      h4
        font-size 22px
        font-weight 600
        a
          font-size 20px
          color #0077b5
          margin-left 10px
          &:hover
            color alpha(#0077b5, .8)
            transition .2s
            
      small
        margin 10px 0
        padding-bottom 20px
        border-bottom 3px solid #191919
        display block
        color #191919
        text-transform uppercase

      p
        margin 20px 0
        font-size 18px
        line-height 1.4
        &:first-child
          margin-top 0
        &:last-child
          margin-bottom 0

      .featured-wrap
        +below(800px)
          order 0 !important
        +below(500px)
          display none
        img
          max-width 300px
          +below(800px)
            max-width 90px
            margin-right 20px

      .partner-brief
        +below(800px)
          padding 0 !important
          text-align left !important
        padding-left 40px
          
      &:nth-of-type(even)
        .featured-wrap
          order 1
        .partner-brief
          padding-left 0
          padding-right 40px
          text-align right
            