section.cases-banner
  background #4d78f8
  text-align center
  overflow hidden
  h1.usabit
    margin 60px 0
    #usabit-logo
      width 100px
      path
        fill white
        
  h2
    margin 110px auto
    font-size 40px
    font-weight 600
    width 750px
    +below(1200px)
      width 100%
      max-width 550px
    +below(600px)
      font-size 32px
      padding 10px
    
  h3
    margin 110px 0
    font-size 20px
    
section.cases
  background-image linear-gradient(#fff, #ddd 750px)
  margin-bottom 50px
  > .header
    padding 0px 0 60px 0
    .iphone-wrap
      position relative
      text-align center
      margin 0 auto
      height 644px
      width 660px

      img
        position absolute
        top 0
        left 0
        z-index 1
        
        &.screen
          z-index 2
          margin-top 82px
          &.reflection
            z-index 3
        
  .cases-list
    .cases-list-item
      height 350px
      background white
      width 100%
      max-width 1000px
      margin 0 auto
      display flex
      margin-bottom 50px
      &:last-child
        margin-bottom 0
        
      &:nth-child(even)
        .item-brief
          order 1
          
        .featured-wrap
          order 2
      
      .featured-wrap
        width 57%
        background-position 50% 50%
        background-size cover
        
      .item-brief
        width 43%
        display flex
        justify-content space-around
        flex-direction column
        .brief-tag
          background-color #333333
          padding 7px 9px
          font-weight 200
          font-size 11px
          text-transform uppercase
          &.orange
            background-color #ef9912

        h4
          color #333333
          font-size 26px
          font-weight 800
          text-transform uppercase
        p
          color #333333
          font-size 18px
          line-heigth 1.5











